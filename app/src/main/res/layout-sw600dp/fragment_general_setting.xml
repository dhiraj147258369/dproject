<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="@color/colorWhite2"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:id="@+id/scroll_view_general_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:paddingStart="24dp"
                android:paddingTop="8dp"
                android:paddingEnd="24dp"
                android:paddingBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_very_light">

                    <TextView
                        android:id="@+id/text_view_general_settings"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="0dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:text="@string/general_settings"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <CheckBox
                        android:id="@+id/checkbox_auto_logout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:paddingTop="4dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/string_auto_logout_label"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_general_settings" />

                    <View
                        android:id="@+id/horizontal_line_2"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="16dp"
                        android:background="#FFFFFF"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox_auto_logout" />

                    <CheckBox
                        android:id="@+id/checkbox_seat_selection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="start"
                        android:paddingTop="4dp"
                        android:text="@string/string_seat_selection_label"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/horizontal_line_2" />

                    <View
                        android:id="@+id/horizontal_line_3"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="16dp"
                        android:background="#FFFFFF"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox_seat_selection" />

                    <CheckBox
                        android:id="@+id/checkbox_Quick_service_print_bill"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="start"
                        android:paddingTop="4dp"
                        android:text="Quick service pop up for print bill"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/horizontal_line_3" />

                    <View
                        android:id="@+id/horizontal_line_4"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="16dp"
                        android:background="#FFFFFF"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox_Quick_service_print_bill" />

                    <CheckBox
                        android:id="@+id/checkbox_payment_terminal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="start"
                        android:paddingTop="4dp"
                        android:visibility="gone"
                        android:text="Payment Terminal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        app:layout_constraintBottom_toTopOf="@+id/horizontal_line_7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/horizontal_line_4" />

                    <Button
                        android:id="@+id/button_payment_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/background_primary_without_border"
                        android:gravity="center"
                        android:text="Edit"
                        android:visibility="gone"
                        android:textColor="#FFF"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/checkbox_payment_terminal" />

                    <View
                        android:id="@+id/horizontal_line_7"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        android:background="#FFFFFF"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox_payment_terminal" />

                    <CheckBox
                        android:id="@+id/checkbox_enable_kitchen_print"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="start"
                        android:paddingTop="4dp"
                        android:text="Enable kitchen print"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/horizontal_line_7" />

                    <View
                        android:id="@+id/horizontal_line_5"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="16dp"
                        android:background="#FFFFFF"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox_enable_kitchen_print" />

                    <CheckBox
                        android:id="@+id/checkbox_enable_logwood"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="start"
                        android:visibility="gone"
                        android:paddingTop="4dp"
                        android:text="Enable Logwood"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/horizontal_line_5" />

                    <View
                        android:id="@+id/horizontal_line_6"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="16dp"
                        android:background="#FFFFFF"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox_enable_logwood" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>