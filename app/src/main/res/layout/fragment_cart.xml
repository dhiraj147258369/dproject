<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main_screen.cart.CartFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_cart_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/constraint_layout_cart_action"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/view_background_blur"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:background="@color/colorBlack"
            app:layout_constraintBottom_toTopOf="@id/constraint_layout_cart_action"
            app:layout_constraintTop_toTopOf="parent"
            android:alpha=".35"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_action_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="4dp"
            android:visibility="invisible"
            android:animateLayoutChanges="true"
            app:layout_constraintBottom_toTopOf="@+id/constraint_layout_cart_action">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_option_repeat_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:elevation="5dp"
                        android:background="@drawable/background_white_rounded_border"
                        android:textColor="@color/colorSkyBlue"
                        app:layout_constraintEnd_toStartOf="@+id/image_view_repeat_order"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="12dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Repeat Order"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/image_view_repeat_order"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardElevation="4dp"
                        android:background="@android:color/transparent"
                        app:cardCornerRadius="19dp"
                        android:layout_marginBottom="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_printer_blue"/>

                    </androidx.cardview.widget.CardView>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_option_print"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:elevation="5dp"
                        android:background="@drawable/background_white_rounded_border"
                        android:textColor="@color/colorSkyBlue"
                        app:layout_constraintEnd_toStartOf="@+id/image_view_print"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="12dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Print"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/image_view_print"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardElevation="4dp"
                        android:background="@android:color/transparent"
                        app:cardCornerRadius="19dp"
                        android:layout_marginBottom="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_printer_blue"/>

                    </androidx.cardview.widget.CardView>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_option_done"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:elevation="5dp"
                        android:textColor="@color/colorSkyBlue"
                        android:background="@drawable/background_white_rounded_border"
                        app:layout_constraintEnd_toStartOf="@+id/image_view_done"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="12dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Done"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/image_view_done"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardElevation="4dp"
                        android:background="@android:color/transparent"
                        app:cardCornerRadius="19dp"
                        android:layout_marginBottom="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_done"/>

                    </androidx.cardview.widget.CardView>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_option_close"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:elevation="5dp"
                        android:textColor="@color/colorSkyBlue"
                        app:layout_constraintEnd_toStartOf="@+id/image_view_close"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="12dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/background_white_rounded_border"
                        android:text="Close"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/image_view_close"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardElevation="4dp"
                        android:background="@android:color/transparent"
                        app:cardCornerRadius="19dp"
                        android:layout_marginBottom="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_close_blue"/>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_cart_action"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/text_view_cart_order_no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="Order NO: 1234567890"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/colorWhite"/>

            <ImageView
                android:id="@+id/image_view_add_product"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp"
                android:visibility="gone"
                android:src="@drawable/ic_add_box_white_36dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/text_view_cart_total_cart_amount"
                app:layout_constraintStart_toEndOf="@id/text_view_cart_order_no"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_cart_total_cart_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="$120"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                app:layout_constraintEnd_toStartOf="@+id/image_view_action"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/colorWhite"/>

            <ImageView
                android:id="@+id/image_view_action"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_top"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.nightonke.boommenu.BoomMenuButton
            android:id="@+id/bmb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:background="@android:color/transparent"
            app:bmb_buttonEnum="textInsideCircle"
            app:bmb_piecePlaceEnum="piecePlace_dot_3_1"
            app:bmb_buttonPlaceEnum="buttonPlace_sc_3_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>