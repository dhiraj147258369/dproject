<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/imageView3"
            android:text="Menu"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorBlack" />

        <ImageView

            android:layout_centerVertical="true"
            android:id="@+id/image_view_drawer_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/carbon_close_outline"
            />



        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/imageView3"
            android:layout_width="59dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
             android:padding="5dp"
            app:srcCompat="@drawable/foodnai_logo_small" />

    </RelativeLayout>

    <TextView
        android:id="@+id/resto_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_margin="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/imageView3"
        android:text="Restaurant name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    <TextView
        android:id="@+id/captain_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resto_name_tv"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/black"
        android:text="Captain name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    <View
        android:layout_below="@id/captain_name_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD" />
</LinearLayout>