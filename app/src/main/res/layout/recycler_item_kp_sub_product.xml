<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="subProduct" type="com.rsl.youresto.data.cart.models.CartSubProductModel"/>
        <variable name="quantity" type="int"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/text_view_cart_sub_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="@{subProduct.MProductName}"
                app:layout_constraintEnd_toStartOf="@+id/text_view_cart_sub_product_qty"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Maska Ban Omelette"/>

        <TextView
                android:id="@+id/text_view_cart_sub_product_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="@{String.valueOf(quantity)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_view_cart_sub_product_name"
                tools:text="1"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_product_types"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="4dp"
                tools:listitem="@layout/recycler_item_kot_ingredient"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@+id/text_view_cart_sub_product_qty"
                app:layout_constraintStart_toStartOf="@+id/text_view_cart_sub_product_name"
                app:layout_constraintTop_toBottomOf="@+id/text_view_cart_sub_product_name"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>