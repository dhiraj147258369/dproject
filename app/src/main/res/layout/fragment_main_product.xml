<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGrey"
        tools:context=".ui.main_screen.main_product_flow.MainProductFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:focusableInTouchMode="true"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_view_table_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Table 1"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/text_view_guests_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/string_guests_label"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorGrey"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_view_table_no"
                app:layout_constraintTop_toBottomOf="@+id/text_view_table_no" />

            <TextView
                android:id="@+id/text_view_occupied_chairs"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/background_white_border_black"
                android:gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorGrey"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_guests_label"
                app:layout_constraintStart_toEndOf="@+id/text_view_guests_label"
                app:layout_constraintTop_toTopOf="@+id/text_view_guests_label"
                tools:text="12" />

            <EditText
                android:id="@+id/edit_text_search_products"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_edit_text_table_search"
                android:drawableStart="@drawable/ic_search_black_24dp"
                android:drawablePadding="4dp"
                android:hint="@string/string_search_products_edit_text_hint"
                android:imeOptions="actionDone"
                android:inputType="text"

                android:padding="10dp"
                android:textSize="16dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image_view_voice_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_keyboard_voice_black_24dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/edit_text_search_products"
                app:layout_constraintEnd_toEndOf="@+id/edit_text_search_products"
                app:layout_constraintTop_toTopOf="@+id/edit_text_search_products" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_navigation"
            app:layout_constraintTop_toBottomOf="@+id/constraint_layout_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"

            android:background="#ECECEC"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_navigation_groups"
                android:text="Groups"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="8dp"
                android:layout_marginStart="8dp"
                android:paddingBottom="8dp"
                android:layout_height="0dp"/>

            <ImageView
                android:id="@+id/image_view_arrow_groups"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                app:layout_constraintStart_toEndOf="@+id/text_view_navigation_groups"
                android:layout_width="25dp"
                android:visibility="invisible"
                android:layout_height="25dp"/>

            <TextView
                android:id="@+id/text_view_navigation_categories"
                android:text="Category"
                android:visibility="invisible"
                android:textColor="@color/colorBlack"
                android:paddingTop="8dp"
                android:layout_marginStart="4dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_view_arrow_groups"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="0dp"/>

            <ImageView
                android:id="@+id/image_view_arrow_category"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="invisible"
                android:layout_margin="4dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                app:layout_constraintStart_toEndOf="@+id/text_view_navigation_categories"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:id="@+id/text_view_navigation_products"
                android:text="Products"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorBlack"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_view_arrow_category"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="0dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <fragment
            app:layout_constraintTop_toBottomOf="@+id/constraint_layout_navigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/constraint_layout_cart_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/main_product_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            app:navGraph="@navigation/main_product_nav_graph"
            app:defaultNavHost="true"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_cart_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/image_view_cart"
                android:layout_width="50dp"
                android:padding="8dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_shopping_cart_white_24dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_cart_bar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/recycler_item_cart_bar_item"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_view_cart"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>