<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.main_screen.pending_order.PendingOrderFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_pending_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                    android:id="@+id/image_view_location"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="4dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_location_on_black_24dp"/>

            <Spinner
                    android:id="@+id/spinner_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorWhite"
                    android:layout_marginEnd="14dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/image_view_location"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_pending_order"/>

            <ImageView
                    android:id="@+id/image_view_user"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="14dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline_pending_order"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_person_black_24dp"/>

            <Spinner
                    android:id="@+id/spinner_server"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="@color/colorWhite"
                    app:layout_constraintStart_toEndOf="@+id/image_view_user"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_pending_order"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintGuide_percent="0.0"
                    android:orientation="vertical"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:id="@+id/linear_layout_pending_order_titles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/colorLightGrey"
                tools:ignore="UseCompoundDrawables"
                app:layout_constraintTop_toBottomOf="@id/constraint_layout_pending_filter">


            <LinearLayout
                    android:id="@+id/linear_order_no"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Order No"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:gravity="center"/>

                <ImageView
                        android:src="@drawable/ic_sort"
                        android:layout_marginStart="4dp"
                        android:layout_width="20dp"
                        android:layout_height="22dp"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linear_table_no"
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text="Table(Group)"/>

                <ImageView
                        android:src="@drawable/ic_sort"
                        android:layout_marginStart="4dp"
                        android:layout_width="20dp"
                        android:layout_height="22dp"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linear_time"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Time"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:gravity="center"/>
                <ImageView
                        android:src="@drawable/ic_sort"
                        android:layout_marginStart="4dp"
                        android:layout_width="20dp"
                        android:layout_height="22dp"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_pending_order"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingTop="2dp"
                android:background="@color/colorLightGrey3"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/recycler_item_pending_order"
                app:layout_constraintTop_toBottomOf="@+id/linear_layout_pending_order_titles"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_no_pending_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@+id/recycler_view_pending_order"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                    android:id="@+id/text_view_no_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Pending Orders"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                    android:id="@+id/image_view_smile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_tag_faces_black_24dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_no_order"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>