<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="note" type="Integer"/>
        <variable name="adapter"
                  type="com.rsl.youresto.ui.main_screen.checkout.payment_options.cash.CurrencyNoteAdapter"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{v -> adapter.onNoteClicked(note)}"
            android:layout_marginBottom="8dp" >

        <ImageView
                android:id="@+id/image_view_currency_note"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/back_white_border_black_"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/text_view_note_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="@{String.valueOf(note)}"
                app:layout_constraintBottom_toBottomOf="@+id/image_view_currency_note"
                app:layout_constraintEnd_toEndOf="@+id/image_view_currency_note"
                app:layout_constraintStart_toStartOf="@+id/image_view_currency_note"
                app:layout_constraintTop_toTopOf="@+id/image_view_currency_note"
                tools:text="5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>