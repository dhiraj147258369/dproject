<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.rsl.youresto.R"/>
        <import type="android.view.View"/>
        <variable
                name="cartModel"
                type="com.rsl.youresto.data.cart.models.CartProductModel"/>
        <variable
                name="cartAdapter"
                type="com.rsl.youresto.ui.main_screen.cart.adapter.CartRecyclerAdapter"/>
        <variable name="position" type="Integer"/>
        <variable name="cartHolder"
                  type="com.rsl.youresto.ui.main_screen.cart.adapter.CartRecyclerAdapter.CartViewHolder"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                app:backgroundResource="@{cartModel.MKitchenPrintFlag == 0 ? R.drawable.background_primary_alpha_without_border : R.drawable.background_green_alpha_without_border}"
                android:minHeight="80dp"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:id="@+id/image_view_drag_cart_item"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:paddingBottom="12dp"
                    android:src="@drawable/ic_cart_drag"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/text_view_cart_product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:onClick="@{v -> cartAdapter.onCartProductNameClick(cartModel)}"
                    android:text="@{cartModel.MProductName}"
                    android:background="?android:attr/selectableItemBackground"
                    app:layout_constraintEnd_toStartOf="@+id/text_view_cart_product_price"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Maska Ban Omelette Chees and "/>

            <TextView
                    android:id="@+id/text_view_cart_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorBlack"
                    android:textStyle="italic"
                    app:layout_constraintEnd_toStartOf="@+id/image_view_qty_minus"
                    app:layout_constraintTop_toTopOf="@+id/text_view_cart_product_name"
                    tools:text="36.0 total"/>

            <com.rsl.youresto.utils.NonScrollRecyclerView
                    android:id="@+id/recycler_view_product_types"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    tools:listitem="@layout/recycler_item_cart_modifier"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="@+id/text_view_cart_product_price"
                    app:layout_constraintStart_toStartOf="@+id/text_view_cart_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_cart_product_name"/>

            <TextView
                    android:id="@+id/text_view_special_instruction"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:visibility="@{cartModel.MSpecialInstruction.length() > 0 ? View.VISIBLE : View.GONE}"
                    android:text="@{`Spl Ins: `+cartModel.MSpecialInstruction}"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_product_types"
                    app:layout_constraintStart_toStartOf="@+id/text_view_cart_product_name"
                    app:layout_constraintEnd_toStartOf="@+id/text_view_special_instruction_price"
                    android:layout_width="0dp"
                    tools:text="Spl Ins: "
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/text_view_special_instruction_price"
                    tools:text="0.0"
                    android:textStyle="bold"
                    android:visibility="@{cartModel.MSpecialInstruction.length() > 0 ? View.VISIBLE : View.GONE}"
                    android:layout_marginTop="4dp"
                    android:text="@{String.valueOf(cartModel.MSpecialInstructionPrice)}"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_product_types"
                    app:layout_constraintEnd_toEndOf="@+id/recycler_view_product_types"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/image_view_qty_plus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:padding="4dp"
                    android:onClick="@{v -> cartAdapter.onQuantityChanged(position, 1,cartModel)}"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_add_box_white_36dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/text_view_cart_product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:text="@{String.valueOf(cartModel.MProductQuantity)}"
                    app:layout_constraintBottom_toBottomOf="@+id/image_view_qty_minus"
                    app:layout_constraintEnd_toStartOf="@+id/image_view_qty_plus"
                    app:layout_constraintTop_toTopOf="@+id/image_view_qty_plus"
                    tools:text="1"/>


            <ImageView
                    android:id="@+id/image_view_qty_minus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="@{v -> cartAdapter.onQuantityChanged(position, 0,cartModel)}"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="4dp"
                    android:src="@drawable/ic_minus_white_24dp"
                    app:layout_constraintEnd_toStartOf="@+id/text_view_cart_product_quantity"
                    app:layout_constraintTop_toTopOf="@+id/image_view_qty_plus"/>

            <TextView
                    android:id="@+id/text_view_cart_product_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:gravity="bottom"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:text='@{String.format("%.2f",cartModel.MProductTotalPrice)}'
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="36.0 total"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_assigned_seats"
                    android:layout_width="0dp"
                    android:layout_height="@{cartModel.MProductName.length() > 20 ? @dimen/dimen_name_long : @dimen/dimen_name_short, default=wrap_content}"
                    android:layout_marginEnd="4dp"
                    android:visibility="visible"
                    android:orientation="horizontal"
                    tools:listitem="@layout/recycler_item_cart_seat"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_special_instruction"
                    app:layout_constraintEnd_toStartOf="@+id/text_view_cart_product_total"
                    app:layout_constraintStart_toStartOf="@+id/text_view_cart_product_name"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
                android:id="@+id/image_view_delete_cart_product"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:onClick="@{v -> cartAdapter.onItemDelete(position, cartModel)}"
                android:src="@drawable/ic_delete_cart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>