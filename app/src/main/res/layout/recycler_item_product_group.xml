<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable name="group" type="com.rsl.youresto.data.database_download.models.ProductGroupModel"/>
        <variable name="adapter"
                  type="com.rsl.youresto.ui.main_screen.main_product_flow.product_group.ProductGroupRecyclerAdapter"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="4dp"
            android:visibility="@{group.MDoNotDisplayOn ? View.GONE : View.VISIBLE}"
            android:onClick="@{v -> adapter.onGroupClicked(group)}"
            android:background="@color/colorPrimary">

        <ImageView
                android:id="@+id/image_view_product_group"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_cloud_download_white_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/guideline_group_recycler_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
                app:layout_constraintGuide_percent="0.8"
                android:orientation="horizontal"
                android:id="@+id/guideline_group_recycler_item"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <TextView
                android:id="@+id/text_view_product_group_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:padding="4dp"
                android:singleLine="true"
                android:text="@{group.MGroupName}"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guideline_group_recycler_item"
                tools:text="Parag"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>