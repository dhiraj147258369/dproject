<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26A59A"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/image_view_backgrounr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_splashback"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/orda_pos_logo_description" />

    <ImageView
        android:id="@+id/image_view_ordaPOS_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/y_c_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/orda_pos_logo_description" />

    <TextView
        android:id="@+id/youresto_"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="100dp"
        android:gravity="center"

        android:lineSpacingExtra="13sp"
        android:text="@string/youresto_"
        android:textAppearance="@style/youresto_"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_backgrounr"
        app:layout_constraintEnd_toEndOf="@+id/image_view_backgrounr"
        app:layout_constraintStart_toStartOf="@+id/image_view_backgrounr"
        app:layout_constraintTop_toBottomOf="@+id/image_view_ordaPOS_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>