<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity">

    <ImageView
            android:id="@+id/image_view_backgrounr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_login_background"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/orda_pos_logo_description" />

    <ImageView
            android:id="@+id/image_view_ordaPOS_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_orda_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/orda_pos_logo_description" />

</androidx.constraintlayout.widget.ConstraintLayout>