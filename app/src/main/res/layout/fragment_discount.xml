<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="discountFragment"
                  type="com.rsl.youresto.ui.main_screen.checkout.payment_options.discount.DiscountFragment"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            tools:context=".ui.main_screen.checkout.payment_options.discount.DiscountFragment">

        <TextView
                android:id="@+id/text_view_discount_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/text_view_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                custom:layout_constraintStart_toStartOf="parent"
                custom:layout_constraintTop_toBottomOf="@+id/text_view_discount_label"
                android:text="Calculated Discount: 0.0" />

        <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                android:id="@+id/toggle_switch_discount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                custom:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_discount"
                custom:activeBgColor="@color/colorPrimary"
                custom:activeTextColor="@android:color/white"
                custom:inactiveBgColor="@color/colorBlueGrey"
                custom:inactiveTextColor="@android:color/black"
                custom:separatorColor="@color/gray_very_light"
                custom:textToggleLeft="%"
                custom:textToggleRight="@string/string_currency_sign"
                custom:toggleWidth="0dp" />

        <TextView
                android:id="@+id/text_view_sign"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_smoky_black_with_left_corners"
                android:gravity="center"
                android:text="%"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/toggle_switch_discount"
                app:layout_constraintTop_toBottomOf="@+id/toggle_switch_discount" />

        <EditText
                android:id="@+id/edit_text_discount_value"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/background_white_with_right_corners"
                android:hint="Enter Discount Percentage"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:onTextChanged="@{( text, start, count, after) -> discountFragment.onTextChanged(text)}"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_view_sign"
                app:layout_constraintTop_toTopOf="@+id/text_view_sign" />

        <Button
                android:id="@+id/button_apply_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Apply"
            android:background="@drawable/new_button"
            android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/toggle_switch_discount"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_discount_value" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>