<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="ingredientModel" type="com.rsl.youresto.data.database_download.models.IngredientsModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/linear_layout_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/text_view_product_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.55"
                    android:paddingStart="2dp"
                    android:paddingEnd="12dp"
                    android:text="@{ingredientModel.MIngredientName +` x `+ ingredientModel.MIngredientQuantity }"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    tools:text="Product" />

            <TextView
                    android:id="@+id/text_view_quantity_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="@{String.valueOf(ingredientModel.MIngredientQuantity)}"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    tools:text="QTY" />

            <TextView
                    android:id="@+id/text_view_price_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text='@{String.format("%.2f",ingredientModel.MIngredientPrice)}'
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    tools:text="Price" />

            <TextView
                    android:id="@+id/text_view_total_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorBlack"
                    tools:text="" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>