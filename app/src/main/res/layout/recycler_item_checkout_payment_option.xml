<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="option"
                  type="com.rsl.foodnairesto.ui.main_screen.checkout.calculation_checkout.CheckoutPaymentModel"/>
        <variable name="adapter" type="com.rsl.foodnairesto.ui.main_screen.checkout.calculation_checkout.CheckoutPaymentOptionAdapter"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:onClick="@{v -> adapter.onPaymentMethodClick(option)}"
            android:layout_marginStart="4dp">

        <ImageView
                android:id="@+id/image_view_payment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@{option.MPaymentName.equals(`Cash`) ? @drawable/ic_cancel_black_24dp : option.MPaymentName.equals(`Card`)? @drawable/ic_cancel_black_24dp : option.MPaymentName.equals(`Wallet`)? @drawable/ic_cancel_black_24dp : @drawable/ic_cancel_black_24dp}"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/text_view_payment_name"/>

        <TextView
                android:id="@+id/text_view_payment_name"
                android:layout_width="match_parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="@{option.MPaymentName}"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view_payment"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Cash"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>