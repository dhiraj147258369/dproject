<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            tools:context=".ui.main_screen.app_settings.printer_settings.bluetooth_printer.BluetoothPrinterFragment">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_bluetooth_printer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/button_set_bluetooth_printer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <Button
                android:id="@+id/button_set_bluetooth_printer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Set Printer"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/background_proceed_button"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button_open_logwood"/>

        <Button
                android:id="@+id/button_open_logwood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Logwood Settings"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_proceed_button"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_set_bluetooth_printer"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>