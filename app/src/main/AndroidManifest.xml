<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rsl.youresto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="com.rsl.youresto.App"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher_yc"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_yc_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup"
        tools:targetApi="m"
        android:networkSecurityConfig="@xml/network_security_config"
        >

        <activity
            android:name="com.rsl.youresto.ui.main_screen.MainScreenActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.Light.FullScreen.WithActionBar"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.rsl.youresto.ui.server_login.ServerLoginActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.rsl.youresto.ui.database_download.DatabaseDownloadActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.rsl.youresto.ui.main_login.MainLoginActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name="com.rsl.youresto.SplashActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rsl.youresto.ui.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustNothing" />

<!--        <service android:name=".utils.services.ServerLoginDetailService" />-->
<!--        <service android:name=".utils.services.CheckAppState" />-->
    </application>

</manifest>